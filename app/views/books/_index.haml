- if @books.count > 0 
  %table{class:"table"}
    %thead
      %tr
        %th="Title"
        %th="Author"
        %th="Path"
    %tbody
      - @books.each do |book|
        %tr
          %td=book.title
          %td=book.author_sort
          %td
            = link_to book.title, book_path(book.id)
  = paginate @books
- else
  %h4 No books found.